<script>
	function clickHandler(event){
		console.log(event);
		let aTag = event.target;
		console.log(aTag.dataset);
		let year = aTag.dataset.year;
		let month = aTag.dataset["month"];
		calForm.year.value = year;
		calForm["month"]["value"] = month;
		calForm.requestSubmit();
	}
